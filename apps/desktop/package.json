{
  "name": "@blackia/desktop",
  "version": "0.2.0",
  "description": "BlackIA Desktop Application",
  "main": "dist/main/index.js",
  "author": "Black Room Technologies",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "npm run copy:python && concurrently \"npm:dev:vite\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:vite": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "wait-on dist/main/index.js && wait-on tcp:5173 && electron .",
    "copy:python": "node scripts/copy-python-files.js",
    "setup:python:venv": "bash scripts/setup-python-venv.sh",
    "build": "npm run setup:python:venv && tsc -p tsconfig.main.json && npm run copy:python && vite build && electron-builder",
    "build:dir": "npm run setup:python:venv && tsc -p tsconfig.main.json && npm run copy:python && vite build && electron-builder --mac --dir",
    "build:dmg": "npm run setup:python:venv && tsc -p tsconfig.main.json && npm run copy:python && vite build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "build:dmg:arm64": "npm run setup:python:venv && tsc -p tsconfig.main.json && npm run copy:python && vite build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --arm64",
    "build:dmg:x64": "npm run setup:python:venv && tsc -p tsconfig.main.json && npm run copy:python && vite build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --x64",
    "build:dmg:universal": "npm run setup:python:venv && tsc -p tsconfig.main.json && npm run copy:python && vite build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --universal",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "docs:import": "tsx scripts/import-docs.ts"
  },
  "dependencies": {
    "@blackia/shared": "workspace:*",
    "@blackia/ui": "workspace:*",
    "@blackia/ollama": "workspace:*",
    "electron-trpc": "^0.5.2",
    "@trpc/client": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7",
    "@tanstack/react-query": "^5.17.0",
    "react-router-dom": "^6.21.0",
    "lucide-react": "^0.303.0",
    "better-sqlite3": "^11.7.0",
    "bindings": "^1.5.0",
    "drizzle-orm": "^0.29.1",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "rehype-highlight": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "react-syntax-highlighter": "^15.5.0",
    "highlight.js": "^11.9.0",
    "katex": "^0.16.9",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.33.5",
    "vectordb": "^0.4.14",
    "apache-arrow": "^14.0.0",
    "python-shell": "^5.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.11.5",
    "@types/pdf-parse": "^1.1.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@types/katex": "^0.16.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.6",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "wait-on": "^7.2.0"
  }
}
